@using System.Web.Mvc.Html
@model Vidly.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
@using (Html.BeginForm("Add", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name,new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}",new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieTypeId)
        @Html.DropDownListFor(m => m.Movie.MovieTypeId, new SelectList(Model.MovieTypes,"Id","Name"),"SelectGenre",new { @class = "form-control"})
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
   
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Stock)
        @Html.TextBoxFor(m => m.Movie.Stock,new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

