@model Vidly.ViewModels.RentalViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="container-fluid">
    <h1>Rentals</h1>
    @Html.ActionLink("New Rental", "New", "Rental", null, new { @class = "btn btn-primary" })
    <table id="rentals" class="table">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Rented Movies</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#rentals").dataTable({
                ajax: {
                    url: "api/rental/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "customerName"
                    },
                    {
                        data: "movieName"
                    }
                ]
            });
        });
    </script>
}

